<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_singleton"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.vi.singlebuilderpattern.single.SingletonActivity">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_single_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/single_txt"/>

        <TextView
            android:id="@+id/tv_single_pid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn_single_click"
            android:scrollbars="vertical"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/btn_non_single_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/non_single_txt"/>

        <TextView
            android:id="@+id/tv_non_single_pid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/btn_non_single_click"
            android:scrollbars="vertical"/>
    </RelativeLayout>

</LinearLayout>
